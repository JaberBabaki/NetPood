<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F2F0F0"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="#F9F9F9"
            android:elevation="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/home_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/searc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgAddPost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/add"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/star"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPersonalPage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/use"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentTop="true"
            android:layout_weight="1">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:elevation="2dp"
            >

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="start"
                android:background="#F5F5F5"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageView33"
                    android:src="#eeeeee"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/lay_home_bottom"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_home_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/home"/>

                        <com.netpood.admin.framework.widget.CustomeTextView
                            android:id="@+id/txt_home_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="خانه"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_add_post_bottom"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_add_post_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/newpost"/>

                        <com.netpood.admin.framework.widget.CustomeTextView
                            android:id="@+id/txt_sdd_post_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مطلب جدید"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_poods_bottom"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_poods_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/poods"/>

                        <com.netpood.admin.framework.widget.CustomeTextView
                            android:id="@+id/txt_poods_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="پودها"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_profile_bottom"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_profile_bottom"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/profile"/>

                        <com.netpood.admin.framework.widget.CustomeTextView
                            android:id="@+id/txt_profile_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="پروفایل"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FAFAFA"
        app:itemTextColor="#E8E8E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/layout_navigation_header" />
            <include layout="@layout/navigation_drawer_menu" />
        </LinearLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>