<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="info.androidhive.materialtabs.fragments.OneFragment"
                android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="58dip"
            android:gravity="left|center">

            <ImageView
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:id="@+id/imageView7"
                android:src="@drawable/cirpic"
                android:layout_marginLeft="8dip"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:gravity="left|center"
                android:layout_weight="1"
                android:layout_marginLeft="8dip">

                <com.netpood.admin.framework.widget.NewControlTextView
                    android:layout_width="98dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/view"
                    android:text="jaber babaki"
                    android:textColor="#000000"/>

                <com.netpood.admin.framework.widget.NewControlTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view2"
                    android:text="very beautiful"
                    android:textColor="#000000"
                    android:textSize="10dip"/>
            </LinearLayout>

            <com.netpood.admin.framework.widget.NewControlTextView
                android:layout_width="48dip"
                android:layout_height="wrap_content"
                android:id="@+id/view3"
                android:text="....."
                android:textColor="#000000"
                android:gravity="right"
                android:layout_marginRight="8dip"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="230dip"
            android:id="@+id/imageView8"
            android:src="@drawable/a1"
            android:scaleType="fitXY"
            android:layout_margin="2dip"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dip">

            <ImageView
                android:layout_width="18dip"
                android:layout_height="fill_parent"
                android:id="@+id/imageView9"
                android:src="@drawable/favori"
                android:layout_marginRight="20dip"
                android:layout_marginLeft="4dip"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="4dip"/>

            <ImageView
                android:layout_width="18dip"
                android:layout_height="fill_parent"
                android:id="@+id/imageView10"
                android:layout_marginRight="20dip"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="4dip"
                android:src="@drawable/comment"/>

            <ImageView
                android:layout_width="18dip"
                android:layout_height="fill_parent"
                android:id="@+id/imageView11"
                android:layout_marginTop="4dip"
                android:layout_marginRight="4dip"
                android:layout_marginBottom="4dip"
                android:src="@drawable/send"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:src="#E5E5E5"
            android:elevation="2dip"
            android:layout_marginTop="8dip"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="4dip">

            <com.netpood.admin.framework.widget.NewControlTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view4"
                android:text="nima dorrani :"
                android:textColor="#000000"
                android:textSize="15dip"/>

            <com.netpood.admin.framework.widget.NewControlTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view5"
                android:text="How can i use custom font for Tablayout class belonging to android.support.design.widget package? I&apos;m using it to implement Quick Return view functionality."
                android:textColor="#000000"
                android:layout_marginTop="3dip"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>