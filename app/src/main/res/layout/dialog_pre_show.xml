<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="ltr">


    <android.support.v7.widget.CardView
        android:id="@+id/card_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="58dip"
                android:gravity="left|center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_more"
                        android:src="@drawable/more"/>

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_date"
                        android:text="23 خرداد 96"
                        android:textSize="12dp"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dip">

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="98dip"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_user"
                        android:text="jaber babaki"
                        android:textColor="#000000"/>

                    <ImageView
                        android:layout_width="44dip"
                        android:layout_height="44dip"
                        android:id="@+id/img_user_item"
                        android:src="@drawable/cirpic"
                        android:layout_marginLeft="8dip"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="420dp"
                android:id="@+id/img_main_item"
                android:src="@drawable/a1"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dip">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img_like_item"
                    android:src="@drawable/ufi_heart_bold"
                    android:layout_marginRight="20dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="4dip"
                    android:layout_marginBottom="4dip"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView10"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="4dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/chat"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView11"
                    android:layout_marginTop="4dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginBottom="4dip"
                    android:src="@drawable/share"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dip"
                android:layout_marginLeft="4dip">

                <com.netpood.admin.framework.widget.CustomeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_main_item"
                    android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع"
                    android:textColor="#000000"
                    android:lineSpacingExtra="5dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="2"
                    android:textSize="13dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dip"
                    android:layout_marginLeft="4dip"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_view_item"
                        android:text="1 بار دیده شده"
                        android:textColor="#AFAFAF"
                        android:textSize="10dp"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:id="@+id/imageView30"
                        android:src="#E8E8E8"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp">

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_user_idea"
                        android:text="بنطرم که خوب شده.."
                        android:layout_marginRight="8dp"
                        android:textColor="#CCCCCC"
                        android:textSize="11dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/img_user_idea"
                        android:src="@drawable/ja"
                        />

                </LinearLayout>

                <com.netpood.admin.framework.widget.CustomeTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_all_comment"
                    android:text="نمايش 234 پيام"
                    android:textColor="#CCCCCC"
                    android:textSize="10dp"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>