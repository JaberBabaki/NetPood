<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netpood.admin.netpoodapp.LoginActivity"
    android:fitsSystemWindows="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/login"
        android:scaleType="fitXY"/>

    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="F A C E B O O K"
        android:id="@+id/button"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_send_corner"
        android:textColor="#385a99"
        android:visibility="gone"/>

    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_netpood"
        android:text="NetPood"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:text="new way to the new wear"
        android:textColor="#ffffff"
        android:textSize="15dp"/>

    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="G O O G L E"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@drawable/button_send_corner"
        android:textColor="#de4b39"
        android:visibility="gone"/>

    <com.netpood.admin.framework.widget.CustomeButton
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:id="@+id/btn_sign_in"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="60dp"
        android:text="@string/sign_in"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_send_corner_sign"/>

    <com.netpood.admin.framework.widget.CustomeButton
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:id="@+id/btn_signup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="120dp"
        android:text="@string/sign_up"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:background="@drawable/button_send_corner_sign"/>

    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_per"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="60dp"
        android:text="Persian"
        android:textColor="#ffffff"
        android:gravity="center|right"
        android:layout_alignParentLeft="true"/>

    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_en"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:gravity="left"
        android:text="English"
        android:textColor="#ffffff"/>
</RelativeLayout>
