<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    tools:context=".Activity.AccontActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/signin"
        android:scaleType="fitXY"/>


    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_netpood"
        android:text="NetPood"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_marginTop="60dp"/>

    <com.netpood.admin.framework.widget.CustomeTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view2"
        android:text="new way to the new wear"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="130dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="48dp"
        android:id="@+id/lay_acount">

        <com.netpood.admin.framework.widget.CustomeTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_create"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:text="صفحه ورود"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.6"
            android:visibility="visible"
            android:id="@+id/lay_phone_number"
            android:adjustViewBounds="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/lay_choice_cuntry"
                >

                <com.netpood.admin.framework.widget.CustomeTextView
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:id="@+id/edt_choice_country"
                    android:hint="انتخاب کشور"
                    android:layoutDirection="rtl"
                    android:textSize="14dp"
                    android:layout_alignParentTop="true"
                    android:gravity="left|center"
                    android:focusableInTouchMode="true"
                    android:textCursorDrawable="@color/color_cur"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/edt_bg_selector"
                    android:textColor="#ffffff"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:phoneNumber="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                >

                <EditText
                    android:id="@+id/edt_pre_number_plus"
                    android:layout_width="7dp"
                    android:layout_height="38dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_bg_selector"
                    android:layout_marginLeft="48dp"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:enabled="true"
                    android:singleLine="true"
                    android:text="+">
                </EditText>

                <EditText
                    android:id="@+id/edt_pre_number"
                    android:layout_width="35dp"
                    android:layout_height="38dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/edt_bg_selector"
                    android:textCursorDrawable="@drawable/my_custom_cur"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:enabled="true"
                    android:layout_marginRight="4dp"
                    android:singleLine="true"
                    android:text="9598"
                    android:maxLength="4"
                    android:phoneNumber="true"
                    android:layoutDirection="ltr">
                </EditText>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:id="@+id/edt_phone_number"
                    android:layout_marginRight="40dp"
                    android:hint="شماره موبایل"
                    android:layoutDirection="rtl"
                    android:textSize="14dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:focusableInTouchMode="true"
                    android:textCursorDrawable="@drawable/my_custom_cur"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/edt_bg_selector"
                    android:textColor="#ffffff"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:phoneNumber="true"/>
            </LinearLayout>
            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_m1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="لطفا کشور مورد نظر را انتخاب کنید و شماره موبایل را وارد کنید"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="visible"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/lay_vertification"
            android:adjustViewBounds="true">

            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_m10"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="کد 6 رقمی به شماره"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"/>

            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_number_recived"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="+98 09384904562"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"/>
            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_m36"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="ارسال شد"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay_code"
            android:visibility="gone">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:id="@+id/edt_pass"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="کد 6 رقمی را وارد کنید"
                android:layoutDirection="rtl"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@color/color_cur"
                android:textColorHint="#ffffff"
                android:background="@drawable/edt_bg_selector"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:numeric="integer"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:id="@+id/lay_edit">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="right">

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/txt_edit"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:text="ویرایش شماره موبایل"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:id="@+id/img_edit"
                        android:src="@drawable/tic_filter_w"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:id="@+id/lay_forgot"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="right">

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/txt_forgot"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:text="رمز عبور را فراموش کردم"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:layout_marginRight="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:id="@+id/img_forgot"
                        android:src="@drawable/tic_filter_w"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay_will"
            android:visibility="gone">

            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_m3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="NetPood will call you in 2:00"
                android:textColor="#ffffff"
                android:textSize="13dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginTop="4dp"
                android:layout_marginRight="42dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.2">

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="بعدی "
                android:id="@+id/btn_sign_up_account"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_send_corner_signup"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

            <com.netpood.admin.framework.widget.CustomeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:id="@+id/btn_sign_in"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>