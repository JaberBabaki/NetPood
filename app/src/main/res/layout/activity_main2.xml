<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F2F0F0"
        android:layoutDirection="ltr"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:background="#F9F9F9"
            android:elevation="5dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/home_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/searc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgAddPost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/add"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/star"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPersonalPage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0.33"
                    android:src="@drawable/use"/>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/bottom_navigation"
            android:layout_alignParentTop="true"
            android:layout_weight="1">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="start"
                android:background="#ffffff"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/lay_home_bottom"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_home_bottom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home_bottom_g"/>

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:id="@+id/txt_home_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خانه"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_add_post_bottom"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_add_post_bottom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/add_post_w"/>

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:id="@+id/txt_sdd_post_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مطلب جدید"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_poods_bottom"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_poods_bottom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/poods_w"/>

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:id="@+id/txt_poods_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پودها"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_profile_bottom"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_profile_bottom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/user_w"/>

                    <com.netpood.admin.framework.widget.CustomeTextView
                        android:id="@+id/txt_profile_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پروفایل"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FAFAFA"
        app:headerLayout="@layout/layout_navigation_header"
        app:itemTextColor="#616161"
        app:menu="@menu/navigation_menu"/>
</android.support.v4.widget.DrawerLayout>