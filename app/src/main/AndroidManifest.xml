<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.netpood.admin.netpoodapp"
          android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".Base"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeSendPost">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.netpood.admin.netpoodapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>

        <activity android:name=".MainActivity"
                  android:hardwareAccelerated="true">
        </activity>
        <activity android:name=".ActivityPersonalPage"/>
        <activity
            android:name=".EditCamera"
            android:theme="@style/AppTheme1"/>
        <activity
            android:name=".SendPost"
            android:theme="@style/AppThemeSendPost"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppThemeSendPost">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppT">
        </activity>
        <activity
            android:name=".AccontActivity"
            android:theme="@style/AppT">
        </activity>
        <activity
            android:name=".SignInActivity"
            android:theme="@style/AppT">
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppThemeSendPost">
        </activity>
        <activity android:name=".Main2Activity"
                  android:theme="@style/AppThemeSendPost">
        </activity>
    </application>

</manifest>